{
  "realm": "yukinoise",
  "displayName": "Yukinoise",
  "enabled": true,
  "registrationAllowed": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "verifyEmail": true,
  "bruteForceProtected": true,
  "accessTokenLifespan": 600,
  "resetPasswordAllowed": true,
  "defaultDefaultClientScopes": [
    "profile",
    "email",
    "roles",
    "web-origins",
    "acr"
  ],
  "defaultOptionalClientScopes": [
    "address",
    "phone",
    "offline_access",
    "microprofile-jwt"
  ],
  "groups": [
    {
      "name": "admins",
      "path": "/admins",
      "realmRoles": [
        "admin"
      ],
      "subGroups": []
    },
    {
      "name": "moderators",
      "path": "/moderators",
      "realmRoles": [
        "moderator"
      ],
      "subGroups": []
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Default Yukinoise user",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "admin",
        "description": "Yukinoise administrator",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "moderator",
        "description": "Yukinoise moderator",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "service",
        "description": "Service account role",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "offline_access",
        "description": "Offline access",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "uma_authorization",
        "description": "UMA authorization",
        "composite": false,
        "clientRole": false
      }
    ]
  },
  "defaultRoles": [
    "user",
    "offline_access",
    "uma_authorization"
  ],
  "clients": [
    {
      "clientId": "yukinoise-api",
      "name": "Yukinoise API Audience",
      "protocol": "openid-connect",
      "enabled": true,
      "bearerOnly": true,
      "publicClient": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "fullScopeAllowed": false
    },
    {
      "clientId": "yukinoise-desktop",
      "name": "Yukinoise Desktop",
      "protocol": "openid-connect",
      "enabled": true,
      "publicClient": true,
      "bearerOnly": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "redirectUris": [
        "http://127.0.0.1:*",
        "http://localhost:*",
        "yukinoise://callback"
      ],
      "webOrigins": [
        "http://127.0.0.1",
        "http://localhost"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "post.logout.redirect.uris": "http://127.0.0.1/*"
      },
      "protocolMappers": [
        {
          "name": "audience-yukinoise-api",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "yukinoise-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        },
        {
          "name": "groups",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-group-membership-mapper",
          "consentRequired": false,
          "config": {
            "full.path": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "groups",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "profile_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "user.attribute": "profile_id",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "profile_id",
            "jsonType.label": "String"
          }
        }
      ],
      "defaultClientScopes": [
        "profile",
        "email",
        "roles",
        "web-origins",
        "acr"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    },
    {
      "clientId": "svc-releases",
      "name": "Service: Releases",
      "protocol": "openid-connect",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret-basic"
    },
    {
      "clientId": "svc-music",
      "name": "Service: Music",
      "protocol": "openid-connect",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret-basic"
    },
    {
      "clientId": "svc-social",
      "name": "Service: Social",
      "protocol": "openid-connect",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret-basic"
    },
    {
      "clientId": "svc-discovery",
      "name": "Service: Discovery",
      "protocol": "openid-connect",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret-basic"
    },
    {
      "clientId": "svc-notifications",
      "name": "Service: Notifications",
      "protocol": "openid-connect",
      "enabled": true,
      "publicClient": false,
      "bearerOnly": false,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret-basic"
    }
  ]
}
